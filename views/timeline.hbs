<main>
    <div class="container">
        <div class="img"
            style="    background-image: url(img/illustrations/starts.png);height: 350px;background-size:cover;">
        </div>
        <div class="card1 social-prof">
            <div class="card1-body">
                <div class="wrapper">
                    <img src={{currentUser.photo}} alt="" class="user-profile">
                    <h3>{{currentUser.name}} {{currentUser.lastName}}</h3>
                    <p>{{currentUser.team}}</p>
                </div>
                {{!-- <div class="row ">
                    <div class="col-lg-12">
                        <ul class=" nav nav-tabs justify-content-center s-nav">
                            <li><a class="active" href="#">Timeline</a></li>
                            <li><a href="#">About</a></li>
                            <li><a href="#">Friends</a></li>
                            <li><a href="#">Photos</a></li>
                            <li><a href="#">Videos</a></li>
                        </ul>
                    </div>
                </div> --}}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="card1">
                    <div class="card1-body">
                        <div class="h5 text-blue">{{currentUser.email}}</div>
                    </div>
                    
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="h6 text-muted">At this company since</div>
                            <div class="h5">{{formattedStartDate date=currentUser.startDate}}</div>
                        </li>
                        <li class="list-group-item">
                            <div class="h6 text-muted">Phone</div>
                            <div class="h5">{{currentUser.phone}}</div>
                        </li>
                        <li class="list-group-item">
                            <div class="h6 text-muted">Location</div>
                            <div class="h5">{{currentUser.office}}</div>
                            <div class="">
                                    <img src="img/illustrations/map.png"  class="d-block w-100" alt="...">
                                </div>
                        </li>
                    </ul>
                </div>
                <div class="card1">
                    <div class="card1-body">
                        <h3 class="card1-title">Latest Photos</h3>
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class=""></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1" class=""></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2" class="active"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item">
                                    <img src={{currentUser.photo}}  class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar2.png" class="d-block w-100"
                                        alt="...">
                                </div>
                                <div class="carousel-item active">
                                    <img src={{currentUser.photo}}  class="d-block w-100"
                                        alt="...">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 gedf-main">
                <!--- \\\\\\\Post-->
                <form action="/timeline" method="POST" autocomplete="off">
                    <div class="card1 social-timeline-card1">
                        <div class="card1-header">
                            <ul class="nav nav-tabs card1-header-tabs" id="myTab" role="tablist">
                            </ul>
                        </div>
                        <div class="card1-body kudo-form">
                            <div class="container d-flex justify-content-around">
                                {{#each eskudos as |eskudo|}}
                                <div class="eskudo-container">
                                    <input class="eskudo-input{{#if errors.eskudo}}is-invalid{{/if}}" name="eskudo" value="{{ eskudo }}" type="checkbox" />
                                    {{#if errors.eskudo}}<div class="invalid-feedback">{{errors.eskudo.message}}</div>{{/if}}

                                    <div class="eskudo-image">
                                        <img src="{{ eskudoImage eskudo=eskudo }}" />
                                    </div>

                                    <div class="hide">{{ eskudoText eskudo=eskudo }}</div>
                                </div>
                                {{/each}}
                            </div>

                            <div id="recipient" class="d-flex flex-row align-items-center mb-2 mt-2">
                                <input id="mate-search" name="recipient" type="text" class="form-control border-0 {{#if errors.recipient}}is-invalid{{/if}}"
                                    placeholder="who are you sending it to?" value="{{ kudo.recipient }}">

                            </div>
                            <input class="" id="recipient-id" type="text" value="{{ kudo.recipient }}" name="recipient_id"/>
                            {{#if errors.recipient}}<div class="invalid-feedback">{{errors.recipient.message}}</div>{{/if}}
                            <div id="search-mate-results">
                            </div>

                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade active show" id="posts" role="tabpanel"
                                    aria-labelledby="posts-tab">
                                    <div class="form-group">
                                        <label class="sr-only" for="message">post</label>
                                        <textarea name="message" type="text" class="{{#if errors.message}}is-invalid{{/if}} form-control html-editor" value="{{ kudo.message }}"
                                            id="message" rows="3" placeholder="What are you thinking?"></textarea>
                                            {{#if errors.message}}<div class="invalid-feedback">{{errors.message.message}}</div>{{/if}}
                                    </div>
                                      
                                    <div class="input-group mb-3">
                                        <input type="file" name="photokudo" value="{{kudo.photokudo }}"
                                        class="custom-form-control form-control border-0 py-2 ps-4">
                                    </div>
                                </div>
                            </div>
                            <div class="btn-toolbar justify-content-between">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-theme-primary">Send Kudo</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- Post /////-->

                <!--- \\\\\\\Post-->
                {{#each kudos as |kudo|}}
                <div class="card1 social-timeline-card1">
                    <div class="card1-header">
                        <div class=" fullheader d-flex justify-content-between align-items-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="mr-2">
                                    <img class="rounded-circle" width="55" src="{{kudo.recipient.photo}}" alt="">
                                </div>
                                <div class="ml-2">
                                    <div class="h5 m-0 text-blue">{{kudo.recipient.name}} {{kudo.recipient.lastName}}</div>
                                    <div class="h7 text-muted">from: {{kudo.sender.name}} {{kudo.sender.lastName}}</div>
                                </div>
                            </div>
                            <div>
                                <div class="dropdown">
                                    <img class="rounded" width="40" src="{{eskudoImage eskudo=kudo.eskudo}}" alt="">
                                </div>
                            </div>
                        </div>
                        <div class="card1-body">
                            <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i> {{formattedDate date=kudo.createdAt}}</div>
                            <a class="card1-link" href="#">
                                <h5 class="card1-title">{{eskudoText eskudo=kudo.eskudo}}</h5>
                            </a>
                            <p class="card1-text">{{kudo.message}}
                            </p>
                        </div>
                        <div class="card1-footer">
                        </div>
                    </div>
                </div>
                {{/each}}
                <!-- Post /////-->
            </div>

            <div class="col-lg-3">
                <div class="card1 social-timeline-card1">
                    <div class="card1-body">
                        <h5 class="card1-title">My team</h5>
                        <ul class="team-list">
                            {{#each teamMates as |teamMate|}}
                            <li>
                                <div class="left">
                                    <img src={{teamMate.photo}} alt="">
                                </div>
                                <div class="right">
                                    <h3>{{teamMate.name}} {{teamMate.lastName}}</h3>
                                    <p>{{teamMate.office}}</p>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>